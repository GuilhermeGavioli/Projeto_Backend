    <style>

        .main-container{
            visibility: hidden;
        }

        #spinning{
            border-radius: 50%;
            border: 3px solid black;
            border-bottom: 3px solid white;
            margin: auto;
            position: absolute;
            inset: 0 0 175px 0;
            width: 50px;
            height: 50px;
            animation: infinite 1s rotate linear;
            visibility: hidden;
        }

        @keyframes rotate{
            from{transform: rotate(0deg);}
            to{transform: rotate(359deg);}
        }
    </style>
<body>
    <div id="spinning"></div>

    <div class="fail-message-container"></div>


    <div class="container" style="visibility: hidden; position: absolute;"></div>

    <form class="container2">

        <h1 class="login-title"><i class="fa-solid fa-user" style="font-size: 1.2em; color: #b9e371;"></i>
        
        </h1>
        <div class="form-container">

            <label for="">Email</label>
            <input type="text" id="field-email" style="margin-bottom: 15px;">
            <label for="">Senha</label>
            <input type="password" id="field-password">
            
            <button type="submit" id="btn-logar">
                <div id="inside-login-btn-circle" style="pointer-events: none;"></div>
                <span id="login-btn-text" style="pointer-events: none;">Login</span>
            </button>
            
            <div class="home"><i class="fa-solid fa-house" onclick="window.location.href = '/'"></i></div>

            <p style="margin-top: 15px; width: 95%; text-align: right; margin-bottom: 5px; font-size: .7em; color: rgb(190,190,190);;">
                NÃ£o possui uma conta?
                <a href="/registrar" style="text-decoration: none; color:var(--cart-main);">Registre-se</a>
                
            </p>
        </div>
    </form>


  

</body>
</html>