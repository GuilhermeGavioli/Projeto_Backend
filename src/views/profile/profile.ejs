    <title> <%= userFound.full_name %> </title>


 
    <!-- GLOBALS -->
    <script src="../../globals/auth.js" defer></script>
    <script src="../../globals/sidebar.js" defer></script>
    <link rel="stylesheet" href="../../globals/header.css" type="text/css">
    <link rel="stylesheet" href="../../globals/footer.css">
    

